#!/usr/bin/env bash

# Check if the user argument is provided
if [ -z "" ]; then
  echo "Please provide a username as an argument."
  exit 1
fi

# Get the user's home directory
home_dir=$(getent passwd "" | cut -d: -f6)

# Run the whoami command under the user passed as an argument
echo "Username: "
echo "Home Directory: "
sudo -u "" whoami
